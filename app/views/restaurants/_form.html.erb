<%= form_for @restaurant, :class => "form-horizontal", :role => "form" do |f| %>

  <div class="row">
    <div class="col-md-10">
      <%if @restaurant.errors.any? %>
        <ul>
          <% @restaurant.errors.full_messages.each do |msg| %>
          <li> <%= msg%> </li>
          <%end%>
        </ul>
      <%end%>
    </div>
  </div>

  <div class="row">
    <%= f.label :name, :class => "col-md-2 control-label"%>
    <div class="col-md-10">
      <%= f.text_field :name, :value => @restaurant.name, :class => "form-control"%>
    </div>
  </div>

  </br>

  <div class="row">
    <%= f.label :description, :class => "col-md-2 control-label"%>
    <div class="col-md-10">
      <%= f.text_area :description, :value => @restaurant.description, :class=>"form-control"%>
    </div>
  </div>

  </br>

  <div class="row">
    <%= f.label :address, :class => "col-md-2 control-label"%>
    <div class="col-md-10">
      <%= f.text_field :address, :value => @restaurant.address, :class => "form-control"%>
    </div>
  </div>

  </br>

  <div class="row">
    <%= f.label :phone_number, :class => "col-md-2 control-label"%>
    <div class="col-md-10">
      <%= f.telephone_field :phone_number, :value => @restaurant.phone_number, :class => "form-control"%>
    </div>
  </div>

  </br>

  <div class="row">
    <%= f.label :remote_image_url,"Image URL  ", :class => "col-md-2 control-label"%>
    <div class="col-md-10">
    <%= f.text_field :remote_image_url, :class => "form-control"%>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-sm-offset-2 col-md-10">
    <%= f.file_field :image%>
    </br>
      <%= image_tag(@restaurant.image_url(:thumbnail)) if @restaurant.image? %>
    <%= f.hidden_field :image_cache%>
    </div>
  </div>

  <br>

  <div class="row">
    <%= f.label :remote_menu_url,"Menu URL  ", :class => "col-md-2 control-label"%>
    <div class="col-md-10">
    <%= f.text_field :remote_menu_url, :class => "form-control"%>
    </div>
  </div>

  </br>

  <div class="row">
    <div class="col-md-offset-2 col-md-10">
    <%= f.file_field :menu%>
    </br>
      <%= image_tag(@restaurant.menu_url(:thumbnail)) if @restaurant.menu? %>
    <%= f.hidden_field :menu_cache%>
    </div>
  </div>

  </br>
  <div class="row">
    <label class="col-md-offset-2 col-md-2">
      <%= f.check_box :remove_image %>
      Remove Image
    </label>
    <label class="col-md-3">
      <%= f.check_box :remove_menu %>
      Remove Menu
    </label>
  </div>

  </br>

  <div class="row">
    <div class= "col-md-offset-2 col-md-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>

<% end %>
